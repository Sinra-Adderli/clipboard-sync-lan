{
	"name": "clipboard-sync-lan",
	"version": "1.0.0",
	"description": "Cross-platform clipboard and file synchronization over LAN using Electron",
	"main": "main.js",
	"type": "commonjs",
	"scripts": {
		"start": "electron .",
		"dev": "electron . --dev",
		"build": "electron-builder",
		"build:mac": "electron-builder --mac",
		"build:win": "electron-builder --win"
	},
	"build": {
		"appId": "com.clipboardsync.lan",
		"productName": "ClipboardSync LAN",
		"directories": {
			"output": "dist"
		},
		"mac": {
			"target": ["dmg"],
			"category": "public.app-category.utilities",
			"icon": "assets/icon.icns"
		},
		"win": {
			"target": ["nsis"],
			"icon": "assets/icon.ico",
			"requestedExecutionLevel": "asInvoker",
			"artifactName": "${productName}-${version}-${arch}.${ext}",
			"publisherName": "Sinra_Adderli"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "ClipboardSync LAN",
			"installerIcon": "assets/icon.ico",
			"uninstallerIcon": "assets/icon.ico",
			"installerHeaderIcon": "assets/icon.ico",
			"deleteAppDataOnUninstall": false,
			"runAfterFinish": true,
			"menuCategory": "Utilities"
		}
	},
	"keywords": [
		"clipboard",
		"sync",
		"lan",
		"electron",
		"cross-platform"
	],
	"author": "Sinra_Adderli",
	"license": "MIT",
	"dependencies": {
		"clipboardy": "^4.0.0",
		"node-notifier": "^10.0.1"
	},
	"devDependencies": {
		"electron": "^28.0.0",
		"electron-builder": "^24.9.1"
	}
}